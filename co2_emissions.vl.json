{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "CO2 Emissions per km^2",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://rasha07.github.io/FIT3179_tut/ne_110m.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://rasha07.github.io/FIT3179_tut/data/List_of_countries_by_carbon_dioxide_emissions_fixed.csv"
        },
        "key": "Country",
        "fields": ["Per Land Area(t /km²/yr)", "1990", "2017"]
      }
    }
  ],
  "projection": {"type": "equalEarth"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Per Land Area(t /km²/yr)",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [10, 100, 1000],
        "range": ["#fdbe85", "#fd8d3c", "#ff0000", "#c60000"]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Per Land Area(t /km²/yr)", "type": "quantitative"},
      {"field": "1990", "type": "quantitative"},
      {"field": "2017", "type": "quantitative"}
    ]
  },
  "config": {}
}
