{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "Change in CO2 Emissions over time",
  "title": "Change in CO2 Emissions over time",
  "data": {
    "url": "https://rasha07.github.io/FIT3179_tut/data/co2_emissions.csv"
  },
  "width": 250,
  "height": 500,
  "params": [
    {
      "name": "country_focus",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Australia",
          "Malaysia",
          "Singapore",
          "United Kingdom",
          "Bhutan"
        ],
        "labels": [
          "Show All",
          "Australia",
          "Malaysia",
          "Singapore",
          "UK",
          "Bhutan"
        ],
        "name": "Country Focus:"
      }
    }
  ],
  "transform": [
    {"filter": "country_focus == null || datum.Country == country_focus"}
  ],
  "mark": {"type": "line"},
  "encoding": {
    "x": {"field": "Year", "type": "ordinal"},
    "y": {
      "field": "Emission",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "color": {"field": "Country", "type": "nominal"},
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Emission", "type": "quantitative"}
    ]
  },
  "config": {}
}